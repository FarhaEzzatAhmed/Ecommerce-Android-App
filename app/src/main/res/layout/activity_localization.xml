<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgray"
    tools:context=".Localization">

    <androidx.cardview.widget.CardView
        android:id="@+id/enbtnnn"
        android:layout_width="324dp"
        android:layout_height="70dp"
        android:layout_marginTop="44dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectLanguage">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="295dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/enbtn"
                android:layout_width="145dp"
                android:layout_height="44dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/English"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView30"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="68dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/amirica" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="45dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />



    <TextView
        android:id="@+id/selectLanguage"
        android:layout_width="145dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        android:text="@string/selectLanguage"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView22" />

    <androidx.cardview.widget.CardView
        android:id="@+id/arbtnnn"
        android:layout_width="324dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enbtnnn">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="295dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/arbtn"
                android:layout_width="145dp"
                android:layout_height="44dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/Arabic"
                android:textColor="@color/black"
                android:textStyle="bold"


                app:layout_constraintStart_toEndOf="@+id/imageeg"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageeg"
                android:layout_width="68dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/egflag" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="324dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arbtnnn">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="295dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Britanian"
                android:layout_width="145dp"
                android:layout_height="44dp"

                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/Britannica"
                android:textColor="@color/black"
                android:textStyle="bold"


                app:layout_constraintStart_toEndOf="@+id/imagebr"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imagebr"
                android:layout_width="68dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pretanicflag" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="324dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="295dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/German"
                android:layout_width="145dp"
                android:layout_height="44dp"

                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/German"
                android:textColor="@color/black"
                android:textStyle="bold"


                app:layout_constraintStart_toEndOf="@+id/imageger"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageger"
                android:layout_width="68dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/gerflag" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>